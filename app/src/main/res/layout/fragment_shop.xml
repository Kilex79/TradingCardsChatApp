<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="16dp"
    tools:context=".NavigationMenu.ShopFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/playerColdown_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Timer"
            android:textColor="@color/light"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/gachaQuantity_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Throws 0"
            android:textColor="@color/light"
            android:textSize="16dp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#00E0FFFF"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#46000000"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Monke"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:gravity="center"
                            android:textColor="@color/light" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="220dp"
                            android:src="@drawable/monke" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="150dp"
                            android:layout_height="25dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/rounded_corner"
                            android:backgroundTint="@color/resalto"
                            android:gravity="center"
                            android:text="Open Cards"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#46000000"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Space"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:gravity="center"
                            android:textColor="@color/light" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="220dp"
                            android:src="@drawable/background_space" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="150dp"
                            android:layout_height="25dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/rounded_corner"
                            android:backgroundTint="@color/resalto"
                            android:gravity="center"
                            android:text="Open Cards"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </ScrollView>

</FrameLayout>